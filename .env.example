# Google Sheets Configuration
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Sheet names
# ที่เก็บผู้ใช้/รหัส PIN (ค่าเริ่มต้น Sheet2 ตามที่ต้องการ)
USERS_SHEET_NAME=Sheet2
# ที่เก็บบันทึกแชท
CHAT_SHEET_NAME=Chats
# รายชื่อชีตที่กันไม่ให้อ่านผ่าน /read (คั่นด้วย ,) ค่าเริ่มต้นจะรวม USERS_SHEET_NAME ให้อัตโนมัติ
# PROTECT_SHEETS=Secrets,PrivateData

# Port Configuration
PORT=3000

# Typhon AI Configuration
# ใช้โฮสต์ OpenTyphoon ตามตัวอย่างจาก n8n
AITYPHON_BASE_URL=https://api.opentyphoon.ai
AITYPHON_API_KEY=your_api_key_here
# Optional, depends on API
AITYPHON_MODEL=default-model

# Auth & Chat persistence
# ชื่อชีทสำหรับผู้ใช้และแชท (สร้างใน Spreadsheet เดียวกับ GOOGLE_SPREADSHEET_ID)
USERS_SHEET_NAME=Users
CHAT_SHEET_NAME=Chats
# อายุ token หน่วยนาที (ค่าเริ่มต้น 1440 = 24 ชั่วโมง)
AUTH_TOKEN_TTL_MINUTES=1440
